@model IEnumerable<PostSys.Models.Post>
@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Posts", FormMethod.Get))
{
	<table class="table table-hover">
		<tr>
			<th>Id</th>
			<th>Post Name</th>
			<th>Course Name</th>
			<th>Class Name</th>
			<th>Student Name</th>
			<th>Delete</th>

		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<th>@item.Id</th>
				<th>@item.Name</th>
				<th>@item.Course.Name</th>
				<th>@item.Course.Class.Name</th>
				<th>@item.Course.Student.UserName</th>
				<th>@Html.ActionLink("Delete", "Delete", new { id=item.Id })</th>
				<th class="sorting">
                    @Html.ActionLink("Download", "Download", new { id=item.Id })
                </th>
			</tr>
		}
	</table>
}